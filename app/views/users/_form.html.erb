
  <%= form_for [@user] do |f| %>
  <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% @user.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

  <div class="form-group">
  <div>
    <h4>First Name</h4><%= f.text_field :first_name, class: 'form-control'%>
  </div>
  <div>
  <h4>Last Name</h4><%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <div>
    <h4>Email</h4><%= f.text_field :email, class: 'form-control' %>
  </div>
  <div>
    <h4>Password</h4><%= f.password_field :password, class: 'form-control' %>
  </div>
  <div>
    <h4>Confirm password</h4><%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="actions">
  <br>
    <%= f.submit 'Register', class: 'btn btn-primary' %>
  </div>
  </div>
<% end %>

