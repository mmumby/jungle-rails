
<h1>Login</h1>
<div class="form-group">
<%= form_tag "/login" do %>
<div>
  <h4>Email</h4><%= text_field_tag :email, nil, class: 'form-control'%>
</div>
<div>
  <h4>Password</h4><%= password_field_tag :password, nil, class: 'form-control' %>
</div>
<div>
<br>
  <%= submit_tag "Login" , class: 'btn btn-primary'%>
</div>
</div>
<% end %>