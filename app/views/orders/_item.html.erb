

<% if product = Product.find_by(id: line_item.product_id) %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
<%= line_item.quantity %>
<!-- quantity -->
    </td>
    <td>
    <%= product.price * line_item.quantity%>
<!-- unit price -->
    </td>
  </tr>
<% end %>


